<main>

    <div class="container mt-2 mb-3">
        <p class="text-light text-center font-2-2-em">Create a job post</p>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center mb-1">
            <div class="col-lg-6">

                <!-- job posting form -->
                <form id="form-job-post" class="border py-3 px-5 mb-4" method="POST" action="/jobs/post">
                    <div class="form-group">
                        <label for="post-company" class="text-light">Company</label>
                        <input type="text" class="form-control" id="post-company" name="company" autofocus required/>
                    </div>

                    <div class="form-group">
                        <label for="post-title" class="text-light">Title</label>
                        <input type="text" class="form-control" id="post-title" name="title" required/>
                    </div>

                    <div class="form-group">
                        <label for="post-salary" class="text-light">Salary</label>
                        <select class="form-control" id="post-salary" name="salary" required>
                            <option></option>
                            <option>less than 30K</option>
                            <option>30K - 39K</option>
                            <option>40K - 49K</option>
                            <option>50K - 59K</option>
                            <option>60K - 69K</option>
                            <option>70K - 79K</option>
                            <option>80K - 89K</option>
                            <option>90K - 99K</option>
                            <option>100K - 109K</option>
                            <option>110K - 119K</option>
                            <option>120K - 129K</option>
                            <option>130K - 140K</option>
                            <option>more than 140K</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="post-region" class="text-light">Region</label>
                        <select class="form-control" id="post-region" name="region" required>
                            <option></option>
                            <option>NW</option>
                            <option>NE</option>
                            <option>SE</option>
                            <option>SW</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="post-city" class="text-light">City</label>
                        <input type="text" class="form-control" id="post-city" name="city" required/>
                    </div>

                    <div class="form-group">
                        <label for="post-email" class="text-light">Email</label>
                        <input type="email" class="form-control" id="post-email" name="email" required/>
                    </div>

                    <div class="form-group">
                        <label for="post-technologies" class="text-light">Technologies</label>
                        <input type="text" class="form-control" id="post-technologies" name="technologies" placeholder="e.g. HTML, CSS, React" required/>
                    </div>

                    <div class="form-group">
                        <label for="post-description" class="text-light">Description</label>
                        <textarea class="form-control" name="description" id="post-description" required></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary">submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</main>


<script src="/app.js"></script>